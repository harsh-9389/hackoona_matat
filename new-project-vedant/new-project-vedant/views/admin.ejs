<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style (2).css">
</head>
<body>
    <div class="container">
        <nav>
            <img src ="logo.png" class="logo">
        </nav>
        <div style="display:flex;justify-content:center;">
            <button style="background-color:aqua" id="images">FIRS With Images</button>
            <button style="background-color:aqua" id="videos">FIRS with Videos</button>
        </div>
        <div id="block1" style="display:none">
        <% data.forEach(function(complaint){ %>
        <div class="block">
            <h3>Complaint : </h3>
            <div class="details">
                <span>Name: </span> 
                <span class="data"> <%= complaint[1] %> </span>
            </div>
            <div class="details">
                <span>Phone: </span> 
                <span class="data"> <%= complaint[2]%> </span>
            </div>
            <div class="details">
                <span>Date: </span> 
                <span class="data"> <%= complaint[3] %> </span>
            </div>
            <div class="details">
                <span>Video Link: </span> 
                <form method="post" action="/admin/buttons">
                <button class="data" type="submit" name="submit" value="<%= complaint[0] %>"> See Video </button>
            </form>
            </div></div>
            <% }) %>
        </div>
        <div id="block2" style="display:none;flex-direction: column-reverse;">
            <% firs.forEach(function(complaint1){ %>
            <div class="block">
                <h3>Complaint : </h3>
                <div class="details">
                    <span>Name: </span> 
                    <span class="data"> <%= complaint1._doc.username %> </span>
                </div>
                <div class="details">
                    <span>Phone: </span> 
                    <span class="data"> <%= complaint1._doc.phone%> </span>
                </div>
                <div class="details">
                    <span>issue: </span> 
                    <span class="data"> <%= complaint1._doc.issue %> </span>
                </div>
                <div class="details" style="margin-bottom: 40px;">
                    <!-- <img src='C:\Users\Acer\Downloads\new-project-vedant\uploads\1680777990985-2022-06-23.png'> -->
                    <img src="<%= complaint1._doc.image %>">
                </div>
        </div>
        <% }) %></div>
    </div>
    <script>
        var images=document.getElementById("images")
        var videos=document.getElementById("videos")
        var block1=document.getElementById("block1")
        var block2=document.getElementById("block2")
        videos.addEventListener('click',function(ev){
            block1.style.display='block'
            block2.style.display='none'
        })
        images.addEventListener('click',function(ev){
            block1.style.display='none'
            block2.style.display='block'
        })
    </script>
</body>
</html>